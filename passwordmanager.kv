<PasswordManager>:
    orientation: 'vertical'
    padding: 20
    spacing: 20

    Label:
        text: 'Descripción:'
        font_size: 48
        height: 80
        color: 0, 0, 1, 1  # Color azul

    TextInput:
        id: description_input
        multiline: False
        font_size: 32
        size_hint_y: None
        height: 80
        background_color: 1, 1, 1, 1
        foreground_color: 0, 0, 0, 1

    Label:
        text: 'Usuario:'
        font_size: 48
        height: 80
        color: 0, 0, 1, 1

    TextInput:
        id: username_input
        multiline: False
        font_size: 32
        size_hint_y: None
        height: 80
        background_color: 1, 1, 1, 1
        foreground_color: 0, 0, 0, 1

    Label:
        text: 'Contraseña:'
        font_size: 48
        height: 80
        color: 0, 0, 1, 1

    TextInput:
        id: password_input
        multiline: False
        font_size: 32
        size_hint_y: None
        height: 80
        password: True
        background_color: 1, 1, 1, 1
        foreground_color: 0, 0, 0, 1

    Button:
        text: "Generar y Guardar Contraseña"
        font_size: 32
        size_hint_y: None
        height: 80
        background_color: 0, 0.6, 0, 1  # Color verde
        on_press: root.generate_and_save_password()

    Button:
        text: "Guardar Contraseña Existente"
        font_size: 32
        size_hint_y: None
        height: 80
        background_color: 0, 0.6, 0, 1  # Color verde
        on_press: root.save_existing_password()

    Button:
        text: "Recuperar Contraseña"
        font_size: 32
        size_hint_y: None
        height: 80
        background_color: 0, 0.4, 1, 1  # Color azul
        on_press: root.retrieve_password()
